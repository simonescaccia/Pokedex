<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_rv_medium"
    app:cardCornerRadius="@dimen/radius_main_medium"
    app:cardElevation="@dimen/elevation_main_medium">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_abilityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_fragmenttitlecv_medium"
            android:textSize="@dimen/text_fragmenttitlecv_medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ability_hidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_textfromborder_medium"
            android:textSize="@dimen/text_fragmenttitlecv_medium"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_abilityName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_abilityName" />

        <TextView
            android:id="@+id/tv_abilityDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_fragmenttitlecv_medium"
            android:layout_marginBottom="@dimen/margin_textfromborder_medium"
            android:paddingLeft="@dimen/margin_textfromborder_medium"
            android:paddingRight="@dimen/margin_textfromborder_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_abilityName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>