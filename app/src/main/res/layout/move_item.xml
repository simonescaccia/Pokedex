<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_move_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_rv_medium"
    app:cardCornerRadius="@dimen/radius_main_medium"
    app:cardElevation="@dimen/elevation_main_medium">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_move_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_fragmenttitlecv_medium"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_fragmenttitlecv_medium"
            android:layout_marginTop="@dimen/margin_fragmenttitlecv_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_move_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/margin_fragmenttitlecv_medium"
            android:background="@drawable/shape_bordertext"
            android:gravity="center"
            android:textSize="@dimen/text_itempokemon_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_move_name"/>

        <LinearLayout
            android:id="@+id/ll_move_second_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_move_name">

            <TextView
                android:id="@+id/tv_power_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/text_fragmenttitlecv_medium" />

            <TextView
                android:id="@+id/tv_accuracy_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/text_fragmenttitlecv_medium" />

            <TextView
                android:id="@+id/tv_pp_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/text_fragmenttitlecv_medium" />

            <TextView
                android:id="@+id/tv_move_damage_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/text_fragmenttitlecv_medium"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>